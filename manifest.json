{
    "name": "Box Border",
    "version": "1.0",
    "author": "molvqingtai",
    "description": "Show all element borders",
    "homepage_url": "https://github.com/molvqingtai/chrome-extensions",
    "manifest_version": 2,

    "icons": {
        "128": "icons/icon_128.png"
    },
    "browser_action": {
        "default_icon": "icons/icon_128.png",
        "default_title": "Show border"
    },
    "background": {
        "scripts": ["js/background.js"],
        "run_at": "document_start"
    },
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "permissions": [
        "storage",
        "tabs", "<all_urls>"
    ]
}

{
    "name": "Box Border",
    "version": "1.0",
    "author": "molvqingtai",
    "description": "Show all element borders",
    "homepage_url": "https://github.com/molvqingtai/chrome-extensions",
    "manifest_version": 2,

    "icons": {
        "128": "icons/icon_128.png",
        "48": "icons/icon_48.png",
        "16": "icons/icon_16.png"
    },
    "browser_action": {
        "default_icon": "icons/icon_128.png",
        "default_title": "Show border"
    },
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false,
        "run_at": "document_start"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["js/main.js"]
    }],
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "permissions": [
        "storage"
    ]
}
